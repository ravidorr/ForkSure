<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme for Android 12+ with Splash Screen -->
    <style name="Theme.ForkSure" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/forksure_primary_dark</item>
        <item name="android:colorAccent">@color/forksure_primary_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/forksure_background_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Splash Screen (Android 12+) -->
        <item name="android:windowSplashScreenBackground">@color/forksure_primary_dark</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/forksure_primary_dark</item>
    </style>

    <!-- Splash Screen Theme for older Android versions -->
    <style name="Theme.ForkSure.Splash" parent="Theme.ForkSure">
        <item name="android:windowSplashScreenBackground">@color/forksure_primary_dark</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/forksure_primary_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources> 