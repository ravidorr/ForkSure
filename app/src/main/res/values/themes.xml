<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light Theme -->
    <style name="Theme.ForkSure" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/forksure_primary_light</item>
        <item name="android:colorAccent">@color/forksure_primary_light</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/forksure_background_light</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash Screen Theme for older Android versions -->
    <style name="Theme.ForkSure.Splash" parent="Theme.ForkSure">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>